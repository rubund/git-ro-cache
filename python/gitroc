	s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
	s.connect((myipaddress,19999))

	get_one(s,'testdevel',branch='06e7ee15b1af2c4886e55db4b76b9aead31ed62a')
	get_one(s,'auroranotifier-server')

	status = False
	while status == False:
		time.sleep(1)
		status = get_symlinks(s,'status')
	#get_symlinks(s,'wait')

