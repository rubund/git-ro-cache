import os
import subprocess
import sys
import mysql.connector
import socket
import threading
import time
import json
import struct

def recv_msg(sock):
	raw_msglen = sock.recv(4)
	if not raw_msglen:
		return None
	msglen = struct.unpack('>I', raw_msglen)[0]
	return recvall(sock, msglen)

def recvall(sock, n):
	data = ''
	while len(data) < n:
		packet = sock.recv(n - len(data))
		if not packet:
			return None
		data += packet.decode('utf-8')
	return data

def get_one(s,reponame,url='gitolite3@nuc:',branch='master'):
	data = {}
	data['command'] = 'checkout'
	data['reponame'] = reponame
	data['url'] = url
	data['commit'] = branch 
	data['mode'] = 0
	jsondata = json.dumps(data)
	s.send(jsondata.encode('utf-8'))
	resp = recv_msg(s)

def get_symlinks(s,command):
	data = {}
	data['command'] = command
	jsondata = json.dumps(data)
	s.send(jsondata.encode('utf-8'))

	resp = recv_msg(s)
	recv_jsondata = json.loads(resp)
	print(recv_jsondata)
	if 'symlinks' in recv_jsondata:
		for symlink in recv_jsondata['symlinks']:
			if 'symlink'  in symlink:
				localpath = "ip/%s" % (symlink['reponame'])
				os.system("""
mkdir -p %s
cd %s
ln -sfT %s %s
""" % (os.path.dirname(localpath),os.path.dirname(localpath),symlink['symlink'],os.path.basename(localpath)))
	return recv_jsondata['complete']

def send_message(jsondata=''):
	getipsock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
